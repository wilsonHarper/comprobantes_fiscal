<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="comprobantes.list">
      <field name="name">comprobantes list</field>
      <field name="model">comprobantes.comprobantes</field>
      <field name="arch" type="xml">
        <tree>
          <field name="tipo"/>
          <field name="prefijo"/>
          <field name="numero_comprobante"/>
          
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="comprobantes.action_window">
      <field name="name">comprobantes window</field>
      <field name="res_model">comprobantes.comprobantes</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->
