    <!-- Top menu item -->
    <menuitem name="comprobantes" id="comprobantes.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Menu 1" id="comprobantes.menu_1" parent="comprobantes.menu_root"/>

    <!-- actions -->

    <menuitem name="List" id="comprobantes.menu_1_list" parent="comprobantes.menu_1"
              action="comprobantes.action_window"/>
    
  </data>
